# syntax=docker/dockerfile:1
FROM matthewc2003/trackbot:latest

COPY . /track

RUN export PYENV_ROOT="$HOME/.pyenv" && export PATH="$PYENV_ROOT/bin:$PATH" && eval "$(pyenv init --path)" && pip3 install -U -r /track/requirements.txt

CMD export PYENV_ROOT="$HOME/.pyenv" && export PATH="$PYENV_ROOT/bin:$PATH" && eval "$(pyenv init --path)" && python3 /track/bot/worker.py -q single